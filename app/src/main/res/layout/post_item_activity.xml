<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
                                   style="@style/cardPostStyle">

    <TextView
            android:text="Author"
            style="@style/authorItemPostStyle"
            android:id="@+id/authorItemTextView"
            />
    <TextView
            android:text="Num comments"
            android:id="@+id/numCommentsTextView"
            style="@style/bottomTextItemPostStyle"
            />
    <TextView
            android:text="Time ago"
            android:id="@+id/timeAgoTextView"

            style="@style/timeAgoItemPostStyle"
            />
    <ImageView
            android:id="@+id/thumbnailImageView"
            style="@style/imageItemPostStyle"
            />

    <ImageView
            android:id="@+id/toLargeIcon"
            android:src="@drawable/to_large_icon_1024"
            style="@style/toLargeIconBtn"
    />
</androidx.cardview.widget.CardView>